<h1>New</h1>
Test: <%= @test %>
Friend.id:  <%= @Friend.id %>
Friend.user_id:  <%= @Friend.user_id %>
param: <%= current_user.id %>
ItemBasic.id: <%= @ItemBasics.id %>
ItemBasic.name: <%= @ItemBasics.name %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form-horizontal">
    <%= form_for(@ItemBasics,url: friends_path) do |f| %>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "名前" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "性別" %>
        </label>
        <div class="col-sm-10">
          <%= f.radio_button :sex, 1 %>男 <%= f.radio_button :sex, 2 %>女
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "誕生日" %>
        </label>
        <div class="col-sm-10">
          <%= f.date_field :birthday %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "出会った場所" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :meet %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "電話番号" %>
        </label>
        <div class="col-sm-10">
          <%= f.telephone_field :tel %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "URL" %>
        </label>
        <div class="col-sm-10">
          <%= f.url_field :url %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "会社" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :company %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "住所" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "出身" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :birthplace %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "Twitter" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :twitter %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "Facebook" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :facebook %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "Instagram" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :instagram %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "LINE" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :line %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label "LinkedIn" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :linkedin %>
        </div>
      </div>

      <%= f.submit "Edit account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
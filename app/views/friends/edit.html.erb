<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form-horizontal">
    <%= form_for(@ItemBasics,url: edit_friend_path) do |f| %>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label :name %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= f.label :sex %>
        </label>
        <div class="col-sm-10">
          <%= f.radio_button :sex, 1 %>男 <%= f.radio_button :sex, 2 %>女
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"><%= f.label :name %></label>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
      </div>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :sex %>
      <%= f.radio_button :sex, 1 %>男 <%= f.radio_button :sex, 2 %>女

      <%= f.label :birthday %>
      <%= f.date_field :birthday %>

      <%= f.label :meet %>
      <%= f.text_field :meet %>

      <%= f.label :tel %>
      <%= f.telephone_field :tel %>

      <%= f.label :url %>
      <%= f.url_field :url %>

      <%= f.label :company %>
      <%= f.text_field :company %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :birthplace %>
      <%= f.text_field :birthplace %>

      <%= f.label :twitter %>
      <%= f.text_field :twitter %>

      <%= f.label :facebook %>
      <%= f.text_field :facebook %>

      <%= f.label :instagram %>
      <%= f.text_field :instagram %>

      <%= f.label :line %>
      <%= f.text_field :line %>

      <%= f.label :linkedin %>
      <%= f.text_field :linkedin %>

      <%= f.submit "Edit account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>